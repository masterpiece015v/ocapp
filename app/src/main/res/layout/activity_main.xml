<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/do1"
        android:layout_width="38dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/do2"
        android:layout_width="38dp"
        android:layout_height="120dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintStart_toEndOf="@+id/si1"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/re1"
        android:layout_width="38dp"
        android:layout_height="120dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintStart_toEndOf="@+id/do1"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="54dp" />

    <Button
        android:id="@+id/mi1"
        android:layout_width="38dp"
        android:layout_height="120dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintStart_toEndOf="@+id/re1"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/fa1"
        android:layout_width="38dp"
        android:layout_height="120dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintStart_toEndOf="@+id/mi1"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/so1"
        android:layout_width="38dp"
        android:layout_height="120dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintStart_toEndOf="@+id/fa1"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/ra1"
        android:layout_width="38dp"
        android:layout_height="120dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_purple"
        app:layout_constraintStart_toEndOf="@+id/so1"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/si1"
        android:layout_width="38dp"
        android:layout_height="120dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_light"
        app:layout_constraintStart_toEndOf="@+id/ra1"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="220dp" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="23dp"
        android:text="再生"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline4" />

    <Button
        android:id="@+id/dore1"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/do1"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/remi1"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/do1"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/faso1"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/fa1"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/sora1"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/fa1"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/rasi1"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/so1"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/dore2"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/do2"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

</android.support.constraint.ConstraintLayout>